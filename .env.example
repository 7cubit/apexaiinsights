# Apex AI Insights - Environment Configuration
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# ============================================
# AI SERVICES
# ============================================

# OpenAI API Key (for AI Chat and QueryBuilder)
OPENAI_API_KEY=sk-your-openai-key-here

# Perplexity API Key (for AI-powered answers)
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# EmailIt API Key (for notification emails)
EMAILIT_API_KEY=your-emailit-key-here

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================

# Google Search Console API Key
GSC_API_KEY=

# ============================================
# SECURITY
# ============================================

# JWT Secret for API authentication
# IMPORTANT: Generate a secure random string (32+ characters)
# Example: openssl rand -base64 32
JWT_SECRET=change_me_to_random_32_char_string

# ============================================
# DATABASE (Internal Docker Network)
# ============================================
# These match docker-compose.yml defaults
# Only change if you modify docker-compose.yml

DB_USER=wordpress
DB_PASS=password
DB_HOST=db
DB_NAME=wordpress

# ============================================
# ENGINE CONFIGURATION
# ============================================

# Go Engine port (internal)
PORT=8080
